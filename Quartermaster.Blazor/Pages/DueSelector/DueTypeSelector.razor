@page "/DueSelector/DueTypeSelector"

<div class="mb-3">
    <h3>Beitragseinstufung - Wie möchtest du dich einstufen?</h3>
</div>

@if (EntryState == null)
    return;

<div class="mb-2">
    <CardLink HRef="/DueSelector/SelectOnePercentYearlyPay" OnNavigate=@(() => SelectDueType(SelectedValuation.OnePercentYearlyPay))>
        <span>Einstufung auf 1% des Jahreseinkommens</span>
        <span class="fw-bold">Empfohlen</span>
    </CardLink>
</div>

<div class="mb-2">
    <CardLink HRef="/DueSelector/SelectByMonthlyPay" OnNavigate=@(() => SelectDueType(SelectedValuation.MonthlyPayGroup))>
        <span>Einstufung nach Monatseinkommen</span>
    </CardLink>
</div>

<div class="mb-2">
    <CardLink HRef="@($"/DueSelector/PaymentOptionSelection/{System.Net.WebUtility.UrlEncode("/DueSelector/DueTypeSelector")}")"
              OnNavigate=@(() => HandleUnderage(SelectedValuation.Underage))>
        <span>Ich bin noch nicht 18 Jahre alt</span>
    </CardLink>
</div>

<div class="mb-3">
    <CardLink HRef="/DueSelector/SelectReduced" OnNavigate=@(() => SelectDueType(SelectedValuation.Reduced))>
        <span>Ich möchte den geminderten Beitrag beantragen</span>
    </CardLink>
</div>

<div>
    <a href="/DueSelector/UserDataInput" class="btn btn-primary">Zurück</a>
</div>