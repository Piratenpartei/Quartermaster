@page "/DueSelector/UserDataInput"

<div class="mb-3">
    <h3>Beitragseinstufung - Wer bist du?</h3>
</div>

@if (EntryState == null)
    return;

<div class="mb-3">
    <label class="form-label">Voller Name</label>
    <input type="text" class="form-control" @bind=EntryState.Name @bind:event="oninput" />
</div>
<div class="mb-3">
    <label class="form-label">E-Mail Adresse</label>
    <input type="email" class="form-control" @bind=EntryState.Email @bind:event="oninput" />
</div>
<div class="mb-3">
    <label class="form-label">Mitgliedsnummer</label>
    <input type="number" step="1" class="form-control" @bind=EntryState.MemberNumber @bind:event="oninput" />
</div>

<div class="d-flex justify-content-end">
    <a class="btn btn-primary @(CanContinue() ? "" : "disabled")" href="/DueSelector/DueTypeSelector">Weiter</a>
</div>